<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net47;net45;netcoreapp3.1;netcoreapp2.1;</TargetFrameworks>

    <IsPackable>false</IsPackable>

    <Authors>Christiaan Rakowski</Authors>
    <Copyright>Christiaan Rakowski - 2017-2020</Copyright>
    <LangVersion>latest</LangVersion>
    <Version>1.0.0</Version>
    <RootNamespace>CSRakowski.Parallel.Tests</RootNamespace>
    <AssemblyName>CSRakowski.Parallel.Tests</AssemblyName>

  </PropertyGroup>

  <PropertyGroup>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="nunit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.16.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.5.0" />
    <PackageReference Include="CSRakowski.AsyncStreamsPreparations" Version="1.3.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\CSRakowski.Parallel\CSRakowski.Parallel.csproj" />
  </ItemGroup>

</Project>
